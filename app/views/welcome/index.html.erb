<!-- Header and Nav -->

  <div class="row full-width">
    <div class="large-3 columns">
      <h1><%= image_tag('g3view.png', id: 'logo') %></h1>
    </div>
    <div class="large-6 columns">
        <h3 id="title-head">gitThreeView <small>a git visualization tool</small></h3>
    </div>
    <div class="large-2 columns">
      <ul class="inline-list right">
        <!-- <li> link_to "Account", @user %></li> -->
        <li><a href="/logout">Sign Out</a></li>
      </ul>
    </div>
  </div>

  <!-- End Header and Nav -->

  <div class="row full-width">

    <!-- Main Content Section -->
    <!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->
    <div class="large-9 push-3 columns">
      <div id="graph-canvas"></div>
    </div>

    <!-- Nav Sidebar -->
    <!-- This is source ordered to be pulled to the left on larger screens -->
    <div class="large-3 pull-9 columns">
      <ul class="side-nav">
        <% @repos.each do |repo| %>
          <li><%= link_to "#{repo.title}",  "/repos/#{repo.id}" , class: "repo-link", id: "#{repo.id}", remote: true %></li>
        <% end %>
      </ul>
    </div>
  </div>


  <!-- Footer -->

  <footer class="row full-width">
    <div class="large-12 columns">
      <hr />
      <div class="row">
        <div class="large-6 columns">
          <p></p>
        </div>
        <div class="large-6 columns">
          <ul class="inline-list right">
            <li><a href="http://threejs.org/">Made with Three.js</a></li>
            <li><a href="http://github.com/ajkamel">About me</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
